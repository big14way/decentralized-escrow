{
  "chain": "stacks",
  "uuid": "escrow-events-tracker",
  "name": "Escrow Service Event Tracker",
  "version": 1,
  "networks": {
    "testnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "YOUR_DEPLOYER_ADDRESS.escrow-manager",
        "contains": "event"
      },
      "then_that": {
        "http_post": {
          "url": "http://localhost:3001/api/escrow-events",
          "authorization_header": "Bearer YOUR_AUTH_TOKEN"
        }
      },
      "start_block": 1,
      "decode_clarity_values": true
    },
    "mainnet": {
      "if_this": {
        "scope": "print_event",
        "contract_identifier": "YOUR_MAINNET_ADDRESS.escrow-manager",
        "contains": "event"
      },
      "then_that": {
        "http_post": {
          "url": "https://your-api.com/api/escrow-events",
          "authorization_header": "Bearer YOUR_AUTH_TOKEN"
        }
      },
      "start_block": 1,
      "decode_clarity_values": true
    }
  }
}
